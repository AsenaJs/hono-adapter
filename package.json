{
  "name": "@asenajs/hono-adapter",
  "module": "index.ts",
  "description": "Hono server and websocket adapter for Asenajs ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "version": "1.4.0",
  "author": "LibirSoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/AsenaJs/hono-adapter.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build": "bun run clean && tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "benchmark": "bun run benchmark/run-benchmark.ts",
    "benchmark:native": "bun run benchmark/native-hono.ts",
    "benchmark:adapter": "bun run benchmark/hono-adapter.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run lint && bun run format:check",
    "check:fix": "bun run lint:fix && bun run format"
  },
  "devDependencies": {
    "@asenajs/asena": "latest",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {
    "@asenajs/asena": "^0.6.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "hono": "^4.10.4",
    "zod": "^3.25.76"
  }
}
